<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Create and Share Polls Instantly">
    <meta name="author" content="AeroBytes">

    <link rel="icon" type="image/png" href="/poll.png">

    <title>{{ title || 'QuickPoll' }}</title>

    @vite([
      'resources/css/app.css',
      'resources/js/app.js',
      'resources/js/transmit.js',
      'resources/js/infiniteScroll.js',
    ])
  </head>

  <body class="font-sans bg-gray-900 text-white flex flex-col min-h-screen">
    <!-- TODO: Place navbar in its own file? -->
    <header class="flex flex-wrap items-center justify-between p-4 md:p-6 border-b border-gray-800">
      <a href="/" class="flex items-center space-x-2 text-2xl font-bold text-blue-400 hover:text-blue-500">
        <img src="/poll.png" alt="QuickPoll Logo" class="h-8 w-8">
        <span>QuickPoll</span>
      </a>
    </header>

    <main class="flex-grow" up-main>
      {{{ await $slots.main() }}}
    </main>

    <footer class="text-center text-sm text-gray-500 py-6 border-t border-gray-700">
      &copy; {{ new Date().getFullYear() }} QuickPoll. All rights reserved.
    </footer>
  </body>
</html>
